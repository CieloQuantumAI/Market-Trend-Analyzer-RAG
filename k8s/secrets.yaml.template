# ============================================
# Kubernetes Secrets Template
# IMPORTANT: Do NOT commit real secrets to git!
# 
# To create secrets:
# kubectl create secret generic market-trend-secrets \
#   --namespace=market-trend \
#   --from-literal=OPENAI_API_KEY=your-key \
#   --from-literal=AZURE_SEARCH_API_KEY=your-key \
#   --from-literal=AZURE_SEARCH_ENDPOINT=https://xxx.search.windows.net \
#   --from-literal=NEWS_API_KEY=your-key
# ============================================
apiVersion: v1
kind: Secret
metadata:
  name: market-trend-secrets
  namespace: market-trend
  labels:
    app: market-trend-analyzer
type: Opaque
stringData:
  # OpenAI API Key (standard OpenAI)
  OPENAI_API_KEY: "your-openai-api-key-here"
  
  # Azure AI Search credentials
  AZURE_SEARCH_ENDPOINT: "https://your-search-service.search.windows.net"
  AZURE_SEARCH_API_KEY: "your-azure-search-admin-key"
  
  # NewsAPI credentials
  NEWS_API_KEY: "your-newsapi-key-here"
  
  # Azure OpenAI (if using instead of standard OpenAI)
  # AZURE_OPENAI_ENDPOINT: "https://your-openai.openai.azure.com/"
  # AZURE_OPENAI_API_KEY: "your-azure-openai-key"
